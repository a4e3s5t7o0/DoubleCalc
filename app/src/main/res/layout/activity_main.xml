<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#333333">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/result_back"
         android:layout_margin="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/scrollview">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"
                android:textColor="#CFCFCF"
                android:id="@+id/result_operator_text_view"/>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:text="0"
            android:gravity="center_vertical|right"
            android:textSize="50dp"
            android:id="@+id/result_text_view"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="10sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0092FF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:padding="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/all_clear_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_autorenew_24"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/clear_entry_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_refresh_24"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/back_space_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_backspace_24"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/operator_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/division"
                android:padding="20dp"
                android:tag="/"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number_button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="7"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="8"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="9"
                android:text="9"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/operator_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_clear_24"
                android:tag="*"
                android:padding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="4"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="5"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="6"
                android:text="6"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/operator_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_remove_24"
                android:padding="20dp"
                android:tag="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:backgroundTint="#00BCD4"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/number_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="1"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="2"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="3"
                android:text="3"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/operator_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_add_24"
                android:padding="20dp"
                android:tag="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:backgroundTint="#00BCD4"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/number_button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:backgroundTint="#D4D5D4"
                android:gravity="center"
                android:tag="0"
                android:text="0"
                android:textSize="30sp" />


            <ImageButton
                android:id="@+id/decimal_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#D4D5D4"
                android:src="@drawable/ic_baseline_fiber_manual_record_24"
                android:padding="25dp"
                android:tag="."
                android:scaleType="fitCenter"
                />

            <ImageButton
                android:id="@+id/operator_button_0"
                android:tag="="
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:backgroundTint="#A5A5A5"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_drag_handle_24"
                android:padding="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>